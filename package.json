{
  "name": "@djankies/eslint-config",
  "version": "2.1.0",
  "description": "Comprehensive ESLint configuration for TypeScript and Next.js projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint . --cache --config eslint.config.mjs",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm run typecheck",
    "test": "npm run lint && npm run typecheck"
  },
  "keywords": [
    "eslint",
    "config",
    "typescript",
    "nextjs"
  ],
  "author": "djankies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djankies/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/djankies/eslint-config/issues"
  },
  "homepage": "https://github.com/djankies/eslint-config#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.5.2",
    "jiti": "^2.5.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@eslint/compat": "*",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "*",
    "@graphql-eslint/eslint-plugin": "*",
    "@next/eslint-plugin-next": "15.5.3",
    "@stylistic/eslint-plugin": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "^9.15.0",
    "eslint-config-next": "15.5.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-canonical": "^5.1.3",
    "eslint-plugin-de-morgan": "^1.3.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-markdownlint": "^0.9.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-no-comments": "^1.1.10",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-testing-library": "^7.8.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-unused-imports": "^4.2.0",
    "@vitest/eslint-plugin": "^1.3.12",
    "eslint-plugin-yml": "^1.18.0",
    "eslint-plugin-zod": "^1.4.0",
    "esprint": "^3.6.0",
    "globals": "^16.4.0",
    "jsonc-eslint-parser": "*",
    "typescript-eslint": "*",
    "yaml-eslint-parser": "*"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "!**/*.test.*",
    "!**/*.spec.*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins.js",
      "types": "./dist/plugins.d.ts"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
